  <script>
      function toggleTheme() {
    const body = document.body;
    if (body.classList.contains('bookish')) {
      body.classList.remove('bookish');
      body.classList.add('dungeon');
    } else if (body.classList.contains('dungeon')) {
      body.classList.remove('dungeon');
      body.classList.add('seasonal');
    } else {
      body.classList.remove('seasonal');
      body.classList.add('bookish');
    }
  }

  function toggleProjects() {
    const section = document.getElementById('projects');
    section.classList.toggle('show');
    if (section.classList.contains('show')) {
      section.scrollIntoView({ behavior: 'smooth' });
    }
  }

  function toggleContact() {
    const section = document.getElementById('contact');
    section.classList.toggle('show');
    if (section.classList.contains('show')) {
      section.scrollIntoView({ behavior: 'smooth' });
    }
  }


    function toggleProjects() {
      const section = document.getElementById('projects');
      section.classList.toggle('show');
      if (section.classList.contains('show')) {
        section.scrollIntoView({ behavior: 'smooth' });
      }
    }

    function toggleContact() {
      const section = document.getElementById('contact');
      section.classList.toggle('show');
      if (section.classList.contains('show')) {
        section.scrollIntoView({ behavior: 'smooth' });
      }
    }
  </script>
